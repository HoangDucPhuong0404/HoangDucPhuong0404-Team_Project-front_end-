require(['jquery'],function($){'use strict';var stickyToCartPoint=$('.product-info-main').offset().top+$('.product-info-main').outerHeight();$(window).scroll(function(){if($(window).width()>=768){if($(window).scrollTop()>stickyToCartPoint){$('body').addClass('pdp-tocart-sticky');}else{$('body').removeClass('pdp-tocart-sticky');stickyToCartPoint=$('.product-info-main').offset().top+$('.product-info-main').outerHeight();}}});$('body').on('click','.swatch-attribute-label',function(){$(this).parents('.swatch-attribute').toggleClass('active');})
$('body').on('click','.swatch-option',function(e){$(this).parents('.swatch-attribute').removeClass('active');if($('body').hasClass('pdp-tocart-sticky')&&$(this).hasClass('color')){window.scrollTo({top:0,behavior:'smooth'});}})
if($(window).width()<768){$('.product-add-form').append("<span class='pdp-tocart-close'></span>");$('.pdp-tocart-close').click(function(){$('body').removeClass('pdp-tocart-opened');});$('.open-tocart-action').click(function(){$('body').toggleClass('pdp-tocart-opened');});$('.towishlist').click(function(){$('body').toggleClass('pdp-tocart-opened');});}
$('body').on('click','.swatch-options-mobile .swatch-option',function(){var id='#'+$(this).attr("id");$('form#product_addtocart_form '+id).click();})
var isDesktop=0;if($(window).width()>=768)isDesktop=1;$(window).on('resize',_.debounce(function(e){if(isDesktop&&$(window).width()<768){location.reload();}else if(!isDesktop&&$(window).width()>=768){isDesktop=1;}},500));});